<% include partials/header %>

<div class="container mainBody">
    <ul class="list-group list-group-flush row justify-content-center">
        <li class="list-group-item col-4">
            <%= contact.name %>
        </li>
        <li class="list-group-item col-4">
            <%= contact.cell %>
        </li>
        <li class="list-group-item col-4">
            <%= contact.email %>
        </li>
        <li class="list-group-item col-4">
            <%= contact.street %>
        </li>
        <li class="list-group-item col-4">
            <%= contact.postcode %>
        </li>
        <li class="list-group-item col-4">
            <%= contact.city %>
        </li>
    </ul>
    <div class="container row justify-content-center mainBody">
        <form action="/index/show/<%=contact._id%>/edit" method="GET">
            <div class="form-group col-3 justify-content-center">
                    <button class="btn btn-outline-primary">Edit</button>
            </div>
        </form>
        <form action="/index/show/<%=contact._id%>?_method=DELETE" method="POST">
            <div class="form-group col-3 justify-content-center">
                    <button class="btn btn-danger">DELETE</button>
            </div>
        </form>
    </div>
</div>


<% include partials/footer %>