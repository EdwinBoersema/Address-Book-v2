<% include partials/header %>

<div class="container" id="newContactDiv">
    <form action="/new" method="POST">
        <div class="form-group row justify-content-center">
            <div class="col-8">
                <label>Name</label>
                <input class="form-control" name="name" type="text" placeholder="name" required>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-8">
                <label>Mobile number</label>
                <input class="form-control" name="cell" type="tel" placeholder="cellphone" required>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-8">
                <label>E-mail Address</label>
                <input class="form-control" name="email" type="email" placeholder="email" required>                
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-8">
                <label>Street</label>
                <input class="form-control" name="street" type="text" placeholder="street" required>                
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-8">
                <label>Postcode</label>
                <input class="form-control" name="postcode" type="text" placeholder="postcode" required>                
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-8">
                <label>City</label>
                <input class="form-control" name="city" type="text" placeholder="city" required>                
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <button id="newButton" type="submit" class="btn btn-outline-primary">Add</button>
        </div>
    </form>
</div>

<% include partials/footer %>
