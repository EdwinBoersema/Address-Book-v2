<% include partials/header %>

<div class="container mainBody">
    <div class="row justify-content-center">
        <div id="editTitle">
            Edit <%= contact.name %>
        </div>
    </div>
    <form action="/show/<%=contact._id%>?_method=PUT" method="POST">
        <div class="form-group row justify-content-center">
            <div class="col-8">
                <label>Name</label>
                <input class="form-control" name="contact[name]" type="text" placeholder="name" value="<%=contact.name%>">
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-8">
                <label>Mobile number</label>
                <input class="form-control" name="contact[cell]" type="tel" placeholder="cellphone" value="<%=contact.cell%>">
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-8">
                <label>E-mail Address</label>
                <input class="form-control" name="contact[email]" type="email" placeholder="email" value="<%=contact.email%>">
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-8">
                <label>Street</label>
                <input class="form-control" name="contact[street]" type="text" placeholder="street" value="<%=contact.street%>">
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-8">
                <label>Postcode</label>
                <input class="form-control" name="contact[postcode]" type="text" placeholder="postcode" value="<%=contact.postcode%>">
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-8">
                <label>City</label>
                <input class="form-control" name="contact[city]" type="text" placeholder="city" value="<%=contact.city%>">
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <button type="submit" class="btn btn-outline-primary">Edit Contact</button>
        </div>
    </form>
</div>


<% include partials/footer %>